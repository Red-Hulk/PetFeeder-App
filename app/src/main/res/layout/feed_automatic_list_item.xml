<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/feed_list_item_container"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/feed_name_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avond Eten"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/feed_date_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-2021"
        android:layout_toRightOf="@+id/feed_name_item_list"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/feed_amount_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klein"
        android:layout_toRightOf="@+id/feed_date_item_list"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/feed_delete_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_item_recview"
        android:layout_toRightOf="@id/feed_amount_item_list"/>


</RelativeLayout>